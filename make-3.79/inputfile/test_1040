#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -d -f $INDIR/n10test/makefile-2a -k -n -p -s > $OUTDIR/o1040 2>&1
$INDIR/util/rm-makestuff -a $OUTDIR/o1040
$INDIR/util/makeoutputcleanup $OUTDIR/o1040
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi
sed -i -n '$d' $OUTDIR/o1040

cat hello >> $OUTDIR/o1040
cd ..
rm -r -f sdir
