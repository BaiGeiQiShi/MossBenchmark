#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -f $INDIR/n10test/makefile-1a -i -s -w > $OUTDIR/o1318 2>&1
$INDIR/util/makeoutputcleanup $OUTDIR/o1318
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

sed -i -n '$d' $OUTDIR/o1318
cat hello >> $OUTDIR/o1318
cd ..
rm -r -f sdir
