#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -d -f $INDIR/n10test/makefile-1a -k -n -w > $OUTDIR/o1243 2>&1
$INDIR/util/rm-makestuff -d $OUTDIR/o1243
$INDIR/util/makeoutputcleanup $OUTDIR/o1243
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi
sed -i -n '$d' $OUTDIR/o1243

cat hello >> $OUTDIR/o1243
cd ..
rm -r -f sdir
