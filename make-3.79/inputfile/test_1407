#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -e -f $INDIR/n10test/makefile-2a -i -p -w > $OUTDIR/o1407 2>&1
$INDIR/util/rm-makestuff -p $OUTDIR/o1407
$INDIR/util/makeoutputcleanup $OUTDIR/o1407
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi
sed -i -n '$d' $OUTDIR/o1407

cat hello >> $OUTDIR/o1407
cd ..
rm -r -f sdir
