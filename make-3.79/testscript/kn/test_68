#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir-tc8 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -I ./include > $OUTDIR/o68 2>&1
$INDIR/util/makeoutputcleanup $OUTDIR/o68
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

sed -i -n '$d' $OUTDIR/o68
cat hello >> $OUTDIR/o68
cd ..
rm -r -f sdir
