#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -e -f $INDIR/n10test/makefile-2a -k -p > $OUTDIR/o559 2>&1
$INDIR/util/rm-makestuff -p $OUTDIR/o559
$INDIR/util/makeoutputcleanup $OUTDIR/o559
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi
sed -i -n '$d' $OUTDIR/o559

cat hello >> $OUTDIR/o559
cd ..
rm -r -f sdir
