#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir-cov1 ./sdir
export MAKEFILES="$INDIR/n10test/makefile-cov1"
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -f $MAKEFILES > $OUTDIR/o802 2>&1
$INDIR/util/makeoutputcleanup $OUTDIR/o802
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi
sed -i -n '$d' $OUTDIR/o802

cd ..
rm -r -f sdir
