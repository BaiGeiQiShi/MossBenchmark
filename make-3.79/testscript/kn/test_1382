#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -f $INDIR/n10test/makefile-1a -n -p -s -w > $OUTDIR/o1382 2>&1
$INDIR/util/rm-makestuff -p $OUTDIR/o1382
$INDIR/util/makeoutputcleanup $OUTDIR/o1382
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi
sed -i -n '$d' $OUTDIR/o1382

cat hello >> $OUTDIR/o1382
cd ..
rm -r -f sdir
