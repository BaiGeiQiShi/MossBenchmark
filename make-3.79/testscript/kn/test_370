#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -d -e -f $INDIR/n10test/makefile-1a -n -s -w > $OUTDIR/o370 2>&1
$INDIR/util/rm-makestuff -d $OUTDIR/o370
$INDIR/util/makeoutputcleanup $OUTDIR/o370
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o370
cd ..
rm -r -f sdir
