#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -e -f $INDIR/n10test/makefile-2a -n -p -w > $OUTDIR/o501 2>&1
$INDIR/util/rm-makestuff -p $OUTDIR/o501
$INDIR/util/makeoutputcleanup $OUTDIR/o501
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi
sed -i -n '$d' $OUTDIR/o501

cat hello >> $OUTDIR/o501
cd ..
rm -r -f sdir
