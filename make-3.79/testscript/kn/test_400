#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir2 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -f $INDIR/n10test/makefile-1a -n -p -w > $OUTDIR/o400 2>&1
$INDIR/util/rm-makestuff -p $OUTDIR/o400
$INDIR/util/makeoutputcleanup $OUTDIR/o400
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi
sed -i -n '$d' $OUTDIR/o400

cat hello >> $OUTDIR/o400
cd ..
rm -r -f sdir
