#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -d -f $INDIR/n10test/makefile-2a -i -w > $OUTDIR/o131 2>&1
$INDIR/util/rm-makestuff -d $OUTDIR/o131
$INDIR/util/makeoutputcleanup $OUTDIR/o131
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o131
cd ..
rm -r -f sdir
