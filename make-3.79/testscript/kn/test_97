#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
CURRDIR=$(pwd)

cp -r -p $INDIR/n10test/sdir0 ./sdir
cd sdir
timeout -k 9 ${TIMEOUT}s $BIN -d -f $INDIR/n10test/makefile-2a -k -p -s -w > $OUTDIR/o97 2>&1
$INDIR/util/rm-makestuff -a $OUTDIR/o97
$INDIR/util/makeoutputcleanup $OUTDIR/o97
if [ -f default.profraw ]; then
    mv default.profraw ${CURRDIR}/
fi

cat hello >> $OUTDIR/o97
cd ..
rm -r -f sdir
