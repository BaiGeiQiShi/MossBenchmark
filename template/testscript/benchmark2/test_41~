#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4

uname=$(whoami)

cp $INDIR/I4/greek1 ./

{ timeout -k 9 ${TIMEOUT}s $BIN -v --from=:${uname} root greek1; } &>$OUTDIR/o41

echo "$?" >>$OUTDIR/o41
own0=`ls -al greek1 | tr -s ' ' | cut -d ' ' -f 3`
own1=`ls -al greek1 | tr -s ' ' | cut -d ' ' -f 4`
echo "${own0} ${own1}" >>$OUTDIR/o41

#parentI46