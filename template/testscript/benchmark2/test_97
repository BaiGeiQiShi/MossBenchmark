#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4

uname=$(whoami)

cp -r $INDIR/I8/myfiles ./

{ timeout -k 9 ${TIMEOUT}s $BIN -R ${uname} myfiles; } &>$OUTDIR/o97

echo "$?" >>$OUTDIR/o97
own0=`ls -al myfiles | tr -s ' ' | cut -d ' ' -f 3`
own1=`ls -al myfiles | tr -s ' ' | cut -d ' ' -f 4`
echo "${own0} ${own1}" >>$OUTDIR/o97

#parentI86