#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4

OPT=("-H")

function outputcheck() {
  r="$1"
  if grep -q -E "$r" $OUTDIR/o15; then
    echo 1 &>>$OUTDIR/o15
    return 1
  fi
    echo 0 &>>$OUTDIR/o15
    return 0
}
>$OUTDIR/o15
touch file
for opt in ${OPT[@]}; do
    timeout ${TIMEOUT}s $BIN $opt file &>>$OUTDIR/o15
    retval=$?
    outputcheck "missing operand after \`file'"
    if [[ $retval -eq 124 ]]; then
        echo 1 &>>$OUTDIR/o15
    elif [[ $retval -gt 128 ]]; then
        echo 1 &>>$OUTDIR/o15
    else
        echo 0 &>>$OUTDIR/o15
    fi
done
