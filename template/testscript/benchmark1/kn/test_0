#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
currdir=$(pwd)

touch file1
{ timeout ${TIMEOUT}s $BIN $(whoami):sudo file1; }  &>$OUTDIR/o0
ls -al file1 | cut -d ' ' -f 4 >>$OUTDIR/o0

{ timeout ${TIMEOUT}s $BIN $(whoami):$(whoami) file1; } &>>$OUTDIR/o0
ls -al file1 | cut -d ' ' -f 4 &>>$OUTDIR/o0
