#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
currdir=$(pwd)

mkdir -p d1/d1/d1
touch d1/d1/d1/file

{ timeout ${TIMEOUT}s $BIN $(whoami):sudo d1/d1/d1/file; }  &>$OUTDIR/o1
ls -al d1/d1/d1/file | cut -d ' ' -f 4 &>>$OUTDIR/o1

{ timeout ${TIMEOUT}s $BIN $(whoami):$(whoami) d1/d1/d1/file; } &>>$OUTDIR/o1
ls -al d1/d1/d1/file | cut -d ' ' -f 4 &>>$OUTDIR/o1
