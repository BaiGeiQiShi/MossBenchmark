#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4

uname=$(whoami)

cp $INDIR/I8/file1 ./
cp $INDIR/I8/file2 ./
cp $INDIR/I8/file3 ./

{ timeout -k 9 ${TIMEOUT}s $BIN ${uname} file1 file2 file3; } &>$OUTDIR/o95

echo "$?" >>$OUTDIR/o95
own0=`ls -al file* | tr -s ' ' | cut -d ' ' -f 3`
own1=`ls -al file* | tr -s ' ' | cut -d ' ' -f 4`
echo "${own0} ${own1}" >>$OUTDIR/o95

#parentI84