#!/bin/bash

BIN=$1
OUTDIR=$2
TIMEOUT=$3
INDIR=$4
currdir=$(pwd)


mkdir -p d1/d1/d1
touch d1/d1/d1/file1

{ timeout ${TIMEOUT}s $BIN $(whoami):sudo d1; }  &>$OUTDIR/o2
ls -al d1/d1/d1/file1 | cut -d ' ' -f 4 &>>$OUTDIR/o2

{ timeout ${TIMEOUT}s $BIN $(whoami):$(whoami) d1/d1/d1/file1; } &>>$OUTDIR/o2
ls -al d1/d1/d1/file1 | cut -d ' ' -f 4 &>>$OUTDIR/o2
